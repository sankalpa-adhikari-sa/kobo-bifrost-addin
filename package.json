{
  "name": "kobo-bifrost-addin",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sankalpa-adhikari-sa/kobo-bifrost-addin.git"
  },
  "license": "MIT",
  "config": {
    "app_to_debug": "excel",
    "app_type_to_debug": "desktop",
    "dev_server_port": 3000
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --port 3000",
    "dev:proxy": "concurrently \"vite --port 3000\" \"node proxy-server.mjs\"",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "office-addin-lint prettier",
    "preview": "vite preview",
    "start": "office-addin-debugging start src/manifest.xml",
    "start:desktop": "office-addin-debugging start src/manifest.xml desktop",
    "start:web": "office-addin-debugging start src/manifest.xml web",
    "stop": "office-addin-debugging stop src/manifest.xml",
    "validate": "office-addin-manifest validate src/manifest.xml",
    "proxy": "node proxy-server.mjs"
  },
  "dependencies": {
    "@azure/msal-node": "^3.6.0",
    "@fluentui/react-components": "^9.55.1",
    "@fluentui/react-icons": "^2.0.264",
    "@hookform/resolvers": "^5.1.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@tanstack/react-form": "^1.12.3",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "fuse.js": "^7.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.5",
    "raw-body": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.58.1",
    "react-router": "^7.6.2",
    "tailwindcss": "^4.1.10",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/office-js": "^1.0.256",
    "@types/office-runtime": "^1.0.23",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-plugin-office-addins": "^4.0.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "mocha": "^11.6.0",
    "office-addin-cli": "^2.0.3",
    "office-addin-debugging": "^6.0.3",
    "office-addin-dev-certs": "^2.0.3",
    "office-addin-lint": "^3.0.3",
    "office-addin-manifest": "^2.0.3",
    "office-addin-prettier-config": "^2.0.1",
    "office-addin-test-helpers": "^2.0.3",
    "office-addin-test-server": "^2.0.3",
    "typescript": "^5.0.2",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-office-addin": "^2.1.0"
  },
  "prettier": "office-addin-prettier-config"
}
